<style>
  .hero {
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 3rem 1.5rem;
    background: linear-gradient(180deg, var(--color-background) 0%, #3a3a3a 100%);
  }

  .hero-logo {
    height: 48px;
    margin-bottom: 1.5rem;
  }

  .hero-content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 1.5rem;
  }

  .accent {
    color: var(--color-accent);
  }

  .hero-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .sp-only {
    display: none;
  }

  .cta-button {
    display: inline-block;
    background-color: var(--color-accent);
    color: #333;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .cta-button:hover {
    opacity: 1;
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(233, 243, 85, 0.3);
  }

  .section {
    padding: 5rem 1.5rem;
  }

  .section-alt {
    background-color: #3d3d3d;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .section-title {
    text-align: center;
    font-size: 1.8rem;
    margin-bottom: 3rem;
  }

  /* Features */
  .features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .feature-card {
    background-color: var(--color-background-light);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
  }

  .feature-card p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Use Cases */
  .use-cases {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .use-case {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    background-color: var(--color-background);
    padding: 1.5rem;
    border-radius: 12px;
  }

  .use-case-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .use-case h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .use-case p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  /* LINE Connect */
  .line-connect {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }

  .qr-code {
    background-color: #ffffff;
    border-radius: 12px;
    padding: 1rem;
  }

  .qr-code img {
    display: block;
    border-radius: 8px;
  }

  .line-connect-text p {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  /* Disclaimer */
  .disclaimer-section {
    background-color: #3a3a3a;
  }

  .disclaimer-content {
    max-width: 800px;
    margin: 0 auto;
    background-color: var(--color-background);
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid var(--color-accent);
  }

  .disclaimer-content p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .disclaimer-content p:last-child {
    margin-bottom: 0;
  }

  .disclaimer-content strong {
    color: var(--color-text);
  }

  /* Responsive - Tablet */
  @media (max-width: 768px) {
    .hero {
      min-height: 45vh;
      padding: 2.5rem 1rem;
    }

    .hero-logo {
      height: 40px;
      margin-bottom: 1.25rem;
    }

    .hero-content h1 {
      font-size: 1.8rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .sp-only {
      display: inline;
    }

    .cta-button {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }

    .section {
      padding: 3rem 1rem;
    }

    .features {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .feature-card {
      padding: 1.5rem;
    }

    .section-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }

    .use-case {
      padding: 1.25rem;
    }

    .use-case h3 {
      font-size: 1rem;
    }

    .use-case p {
      font-size: 0.85rem;
    }

    .qr-code img {
      width: 180px;
      height: 180px;
    }

    .disclaimer-content {
      padding: 1.5rem;
    }
  }

  /* Responsive - Mobile */
  @media (max-width: 480px) {
    .hero {
      min-height: 40vh;
      padding: 2rem 1rem;
    }

    .hero-logo {
      height: 36px;
      margin-bottom: 1rem;
    }

    .hero-content h1 {
      font-size: 1.5rem;
      line-height: 1.5;
    }

    .hero-description {
      font-size: 0.9rem;
      line-height: 1.7;
    }

    .cta-button {
      padding: 0.75rem 1.75rem;
      font-size: 0.95rem;
      width: 100%;
      max-width: 280px;
    }

    .section {
      padding: 2.5rem 1rem;
    }

    .section-title {
      font-size: 1.3rem;
      margin-bottom: 1.5rem;
    }

    .feature-card {
      padding: 1.25rem;
    }

    .feature-icon {
      font-size: 2rem;
    }

    .feature-card h3 {
      font-size: 1.1rem;
    }

    .feature-card p {
      font-size: 0.9rem;
    }

    .use-case {
      padding: 1rem;
      gap: 1rem;
    }

    .use-case-icon {
      font-size: 1.5rem;
    }

    .use-case h3 {
      font-size: 0.95rem;
    }

    .use-case p {
      font-size: 0.8rem;
    }

    .qr-code {
      padding: 0.75rem;
    }

    .qr-code img {
      width: 160px;
      height: 160px;
    }

    .line-connect-text p {
      font-size: 1rem;
    }

    .disclaimer-content {
      padding: 1.25rem;
    }

    .disclaimer-content p {
      font-size: 0.9rem;
    }
  }
</style>
