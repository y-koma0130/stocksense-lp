---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "StockSense - 割安株通知サービス",
  description = "日本の個別株の割安銘柄を分析し、中期〜長期投資向けにLINEで通知するサービスです。"
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="192x192" href="/Favicon_Logo.png" />
    <link rel="apple-touch-icon" href="/Favicon_Logo.png" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WSH1LWD4XF"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-WSH1LWD4XF');
    </script>
  </head>
  <body>
    <header class="header">
      <div class="header-inner">
        <a href="/" class="logo">
          <img src="/Logo.svg" alt="StockSense" height="32" class="logo-full" />
          <img src="/LogoIcon.svg" alt="StockSense" height="28" class="logo-icon" />
        </a>
        <nav class="nav">
          <a href="/terms">利用規約</a>
          <a href="/privacy">プライバシーポリシー</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="footer">
      <div class="footer-inner">
        <div class="footer-links">
          <a href="/terms">利用規約</a>
          <a href="/privacy">プライバシーポリシー</a>
        </div>
        <p class="copyright">&copy; 2025 StockSense. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --color-background: #434343;
    --color-background-light: #5a5a5a;
    --color-accent: #E9F355;
    --color-text: #ffffff;
    --color-text-muted: #b0b0b0;
    --max-width: 1200px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Hiragino Sans", "Noto Sans JP", sans-serif;
    background-color: var(--color-background);
    color: var(--color-text);
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  a:hover {
    opacity: 0.8;
  }
</style>

<style>
  .header {
    position: sticky;
    top: 0;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-background-light);
    z-index: 100;
  }

  .header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-full {
    display: block;
  }

  .logo-icon {
    display: none;
  }

  .nav {
    display: flex;
    gap: 1.5rem;
  }

  .nav a {
    color: var(--color-text);
    font-size: 0.9rem;
  }

  .nav a:hover {
    color: var(--color-accent);
  }

  .footer {
    background-color: #333333;
    padding: 2rem 1.5rem;
    margin-top: 4rem;
  }

  .footer-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  .footer-links a {
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .copyright {
    color: var(--color-text-muted);
    font-size: 0.8rem;
  }

  @media (max-width: 640px) {
    .header-inner {
      padding: 0.75rem 1rem;
    }

    .logo-full {
      display: none;
    }

    .logo-icon {
      display: block;
    }

    .nav {
      gap: 0.75rem;
    }

    .nav a {
      font-size: 0.75rem;
    }

    .footer {
      padding: 1.5rem 1rem;
      margin-top: 2rem;
    }

    .footer-links {
      flex-direction: column;
      gap: 0.5rem;
    }

    .footer-links a {
      font-size: 0.8rem;
    }

    .copyright {
      font-size: 0.75rem;
    }
  }

  @media (max-width: 320px) {
    .header-inner {
      flex-direction: column;
      gap: 0.5rem;
    }

    .nav {
      gap: 1rem;
    }
  }
</style>
